<div class="text-center">
    <div class="text-5xl font-bold my-4">
     {{section.settings.title}}   
    </div>
    <div class="my-4">
        <p class="text-base md:text-xl leading-normal">{{section.settings.subtext_html}}</p>
    </div>

    <div class="my-4">
        {% if section.settings.button_url==blank %}
            {% assign shop_url = shop.secure_url %}
        {% else %}
            {% assign shop_url = section.settings.button_url %}
          
        {% endif %}
        <a href="{{shop_url}}" class="inline-block py-2 items-center justify-center px-4  text-base font-medium shadow bg-green-600 hover:bg-green-800">{{section.settings.button_label}}</a>
    </div>
</div>
{% schema %}
{
    "name": "Template 404",
    "tag": "section",
    "class": "flex items-center justify-center h-screen py-6",
    "settings": [

        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "404 Heading"
        },
        {
            "type": "text",
            "id": "subtext_html",
            "label": "404 Subtext Title",
            "default": "<p>Sorry, the page you are looking for does not exist.</p>"
        },{
            "type":"text",
            "id":"button_label",
            "default": "Back to Home",
            "label": "Button Label"
        },{
            "type":"text",
            "id":"button_url",
            "label": "Button URL"
            
        }

        ]
}
{% endschema %}